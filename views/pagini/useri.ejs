<!DOCTYPE html>
<html  lang="en">
    <head>
        <meta name="description" content="G-OAT - Users">
        <meta name="keywords" content="oatmeal, oat, users">
        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />
        <title>G-OAT - Users</title>
        <%- include("../fragmente/head") %>     
        <script type="text/javascript" src=/Resurse/js/produse.js></script>
    </head>
    <body>
    <%- include("../fragmente/header") %>

    <main>
    <div class="afisaj">
        <h2>Users</h2>

		<table id="useri">
		  <tr>
			<th>id</th><th>Username</th><th>Last name</th><th>First name</th><th>Date</th><th>Role</th><th>Promote</th><th>Demote</th>
		  </tr>

		  <% for (var i = 0; i < useri.length; i++) { 
				%>
				<tr>
				  <td><%= useri[i].id %></td>
				  <td><%= useri[i].username %></td>
				  <td><%= useri[i].nume %></td>
				  <td><%= useri[i].email %></td>
				  <%  
					d=new Date(useri[i].data_adaugare)
					sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
				  %>
					<td><%=  sir_data %></td>
					<td><%=  useri[i].rol %></td>
					<td>
						<form id="promote" method="post" action="/promote">
							<label id = "ascundere">
								Id: <input type="text" name="id_utiliz" value="<%- useri[i].id %>">
							</label>	
							<input type="submit" value="Promote">
						</form>
					</td>
					<td>
						<form id="demote" method="post" action="/demote">
							<label id = "ascundere">
								Id: <input type="text" name="id_utiliz" value="<%- useri[i].id %>">
							</label>	
							<input type="submit" value="Demote">
						</form>
					</td>
				</tr> 
   		  <% } %>
		</table>
	</div>
</main>


    <%- include("../fragmente/footer") %>

</body>
</html>